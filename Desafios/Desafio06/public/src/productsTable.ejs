<h2 style="color:crimson;">Registro</h2>


<% if(products.length > 0){ %>
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Nombre del producto</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        <% for (const product of products) {%>
        <tr>
            <td><%=product.name%> </td>
            <td>$<%=product.price%> </td>
            <td><img src="<%=product.thumbnail%>" alt="<%=product.name%>" style="width: 30px; height: 30px;"></td>
        </tr>
        <% } %>
    </table>
</div>
<% } else {%>
<h3 class="alert alert-danger">No hay productos</h3>
<% } %>