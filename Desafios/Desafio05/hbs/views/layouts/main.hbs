<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=รง, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Formulario ingreso de producto HBS</title>
  </head>
  <body>

    <div class="container mt-3 fluid">
      <div class="jumbotron">
        <h1 style="color:blue;">Ingrese producto</h1>
        <br />
        <form action="/productos" method="post">
          <div class="form-group">
            <label for="name"><b>Nombre del producto</b></label>
            <input id="name" class="form-control" type="text" name="name" />
          </div>
          <div class="form-group">
            <label for="price"><b>Precio</b></label>
            <input id="price" class="form-control" type="number" name="price" />
          </div>
          <div class="form-group">
            <label for="thumbnail"><b>Foto</b></label>
            <input
              id="thumbnail"
              class="form-control"
              type="text"
              name="thumbnail"
            />
          </div>
          <button class="btn btn-success mt-3 mb-5">Enviar</button>
          <br>
          <a class="btn btn-outline-warning btn-sm" role="button" href="/productos">Ver Productos</a>
        </form>
      </div>
      <div>

        {{{body}}}
        
      </div>

    </div>

  </body>
</html>