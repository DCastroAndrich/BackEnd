<div class="container bg-secondary bg-opacity-75 bg-gradient rounded mt-3">
  <div class="container">
    <h1 style="color: blue">Ingrese producto</h1>
    <br />

    <!-- Formulario -->

    <form id="addNewProduct">
      <div class="form-group mb-3">
        <label class="form-label" for="name"><b>Nombre del producto</b></label>
        <input
          id="name"
          class="form-control"
          type="text"
          name="name"
          required
        />
      </div>
      <div class="form-group mb-3">
        <label class="form-label" for="price"><b>Precio</b></label>

        <input
          id="price"
          class="form-control"
          type="number"
          name="price"
          required
        />
      </div>
      <div class="form-group mb-3">
        <label class="form-label" for="thumbnail"><b>Foto</b></label>
        <input
          id="thumbnail"
          class="form-control"
          type="text"
          name="thumbnail"
        />
      </div>
      <button class="btn btn-success mt-3 mb-5">Enviar</button>
    </form>
    <!-- Final Formulario -->
  </div>

  <!-- Tabla -->
  <div id="productsTable" class="container"></div>

  <!-- Final de tabla -->
</div>
